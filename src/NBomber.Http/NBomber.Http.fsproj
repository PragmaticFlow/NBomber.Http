<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>nbomber-http</ToolCommandName>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <Authors>PragmaticFlow</Authors>
    <Company>PragmaticFlow</Company>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/PragmaticFlow/NBomber.Http</PackageProjectUrl>
    <Copyright>PragmaticFlow@2019</Copyright>
    <PackageTags>load-testing, performance-testing, integration-testing, http, fsharp</PackageTags>
    <PackageIconUrl>https://raw.githubusercontent.com/PragmaticFlow/NBomber/master/assets/nbomber_icon.png</PackageIconUrl>
    <Version>0.11.0</Version>
    <Description>NBomber plugin to defining HTTP scenarios.</Description>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="HttpRequest.fs" />
    <Compile Include="Api\HttpStep.fs" />
    <Compile Include="Api\HttpScenario.fs" />
    <Compile Include="Api\CSharp.fs" />
    <Compile Include="Program.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="FSharp.Core" Version="4.6.2" />
    <PackageReference Include="NBomber" Version="0.11.0" />
  </ItemGroup>

</Project>
